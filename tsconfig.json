{
    "compilerOptions": {
      "target": "ESNext",
      "strict": true,
      "outDir": "./dist",
      "declaration": true,
      "declarationDir": "./types",
      "moduleResolution": "nodenext",
      "module": "NodeNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/"
    ]
}